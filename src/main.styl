violet-color = #2E3192
yellow-color = #FFC20E
@font-face {
    font-family: 'MetaSerifPro';
    src: url('../../Fonts/MetaSerifPro-Bold.otf');    
    font-weight: bold;
}
@font-face {
    font-family: 'MetaSerifPro';
    src: url('../../Fonts/MetaSerifPro-Book.otf');
    font-weight: 200;
}
@font-face {
    font-family: 'MetaSerifPro';
    src: url('../../Fonts/MetaSerifPro-Extrabold.otf');
    font-weight: bolder;
}
@font-face {
    font-family: 'MetaSerifPro';
    src: url('../../Fonts/MetaSerifPro-LightItalic.otf');
    font-style: italic;
    font-weight: 300;
}
body
    background-image url("../../images/background.png")
    background-size cover
    background-repeat no-repeat
    font-family: 'MetaSerifPro';
    .container        
        .header_block
            padding 70px 0 0
            &_images
                display flex
                justify-content space-between
                +below(768px)                    
                    display block
                    text-align center
            &_image
                width 100%            
        .title_block
            padding-top 28px
            &_text_wraper                
            &_event_text
                font-size 60px
                color white
                font-family 'MetaSerifPro'
                font-weight 300
                +below(990px)
                    text-align center
                    font-size 36px
            &_logo_club
                padding-top 40px
                +below(990px)
                    text-align center
            &_logo_club_image
                max-width 100%
            &_image
                max-width 100%
        .invitation_block
            color white
            font-size 24px
            font-family 'MetaSerifPro'
            font-weight 200
            +below(768px)
                padding 50px 0 0 
            &_text:last-child
                padding: 40px 0 0
                width 85%               
        .managers_block            
            padding 150px 0 0
            +below(768px)
                padding 0        
            .manager_block                
                text-align center
                color violet-color
                +below(768px)
                    padding 20px 0 0                
                &_info
                    background-color yellow-color
                    margin-top -45px                                  
                &_name
                    font-size 32px
                    padding 75px 0 0
                    font-family 'MetaSerifPro'
                    font-weight bold
                    +below(990px)
                        font-size 24px 
                &_function
                    font-size 24px
                    font-family 'MetaSerifPro'
                    font-weight 200
                    +below(990px)
                        font-size 16px  
                &_function:last-child
                    padding 0 0 25px
        .event_info            
            color white
            padding 133px 0 0
            +below(990px)
                text-align center
            +below(768px)
                padding 55px 0 0 
            &_title
                font-size 40px
                font-family 'MetaSerifPro'
                font-weight bolder                 
            &_timetable
                list-style none                
                padding-left 0
            &_timetable,
            &_last
                font-family 'MetaSerifPro'
                font-weight 200
            &_description
                font-style italic
                font-weight: 300;                   
            &_description,
            &_last,
            &_timetable
                font-size 24px
                padding 45px 0 0
        .bottom_button            
            font-size 40px            
            padding 80px 0 178px
            font-family 'MetaSerifPro'
            font-weight bolder
            cursor pointer
            +below(990px)
                text-align center
            +below(574px)
                white-space nowrap                    
            &_link
                color violet-color
                text-decoration none
                background-color yellow-color
                padding 24px 64px
                +below(574px)
                    padding 24px 55px
            &_link:hover
                color yellow-color
                background-color white
            